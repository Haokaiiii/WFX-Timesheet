# WorkflowMax OAuth Configuration
# Get these from WorkflowMax: Settings > API > OAuth Applications
WFX_CLIENT_ID=your_client_id_here
WFX_CLIENT_SECRET=your_client_secret_here
WFX_ACCOUNT_ID=your_account_id_here

# Server Configuration
PORT=3000

# OAuth Callback URL
# For production, use your ngrok or public URL
# For local testing with auth-server, use: http://localhost:8080/oauth/callback
WFX_CALLBACK_URL=https://your-domain.ngrok-free.app/oauth/callback

# Optional: API Base URL (defaults to production)
# WFX_BASE_URL=https://api.workflowmax.com

# Optional: Performance Settings
# CACHE_TIME_MINUTES=15
# REQUEST_TIMEOUT_MS=30000
# MAX_RETRIES=3 